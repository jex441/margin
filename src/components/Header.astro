---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>

    <script>
    document.addEventListener('keydown', (event) => {
  // Check if 'Meta' (Command key on macOS) and 'M' are pressed together
  if (event.metaKey && event.key === 'm') {
    event.preventDefault(); // Prevent the browser's default behavior
    openModal(); // Call your modal opening function
  }
});

function openModal() {
  const modal = document.getElementById('myModal');
  modal.classList.remove('hidden'); // Show the modal (remove the hidden class)
}

function closeModal() {
  const modal = document.getElementById('myModal');
  modal.classList.add('hidden'); // Hide the modal (add the hidden class)
}
    </script>

     <nav class="w-full bg-['#f9f9f9'] py-2 px-4 lg:px-10 h-20 flex items-center">
        <div class="text-xl font-light uppercase tracking-wider w-1/3 flex items-center gap-4">
          <img src="marginlogogray.png" class="w-[40px] mx-1 h-[40px]" alt="Logo" />
        </div>
      <ul class="hidden lg:flex flex-row justify-center gap-6 w-1/3 desktop-menu">
        <li><a href="#" class="cursor-pointer text-[#686767] text-[14px] font-light hover:underline">About</a></li>
        <li><a href="#" class="cursor-pointer text-[#686767] text-[14px] font-light hover:underline">Services</a></li>
        <li><a href="#" class="cursor-pointer text-[#686767] text-[14px] font-light hover:underline">Resources</a></li>
        <li><a href="#" class="cursor-pointer text-[#686767] text-[14px] font-light hover:underline">Blog</a></li>
      </ul>
      <div class="w-1/3 justify-end flex">
     <button class="flex items-center bg-black/80 text-sm text-gray-200 shadow-md hover:text-white px-4 py-2 rounded-2xl hover:bg-black/90 transition">
        <span>Contact</span>
        <img src="cmdm.png" alt="Contact Icon" class="w-10 ml-2">
      </button>
      </div>
      <div class="lg:hidden flex items-center">
        <button class="hamburger" id="menu-btn">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
      <ul id="mobile-menu" class="mobile-menu lg:hidden flex flex-col gap-4">
        <li><a href="#" class="cursor-pointer hover:underline">About</a></li>
        <li><a href="#" class="cursor-pointer hover:underline">Services</a></li>
        <li><a href="#" class="cursor-pointer hover:underline">Resources</a></li>
        <li><a href="#" class="cursor-pointer hover:underline">Blog</a></li>
        <li>
          <button type="button" class="py-1 rounded-lg px-4 text-white bg-black/75">
            Contact us
          </button>
        </li>
      </ul>
    </nav>

<!-- Modal -->
<div id="myModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
  <div class="bg-white p-6 rounded shadow-lg w-[600px] h-[700px]">
    <div class="flex flex-row items-center gap-4">
   <span><img src="marginlogogray.png" class="w-[55px] mx-1 h-[55px]" alt="Logo" /></span>
    <span >
    <h2 class="text-xl">Contact Margin Research</h2>
    <p class="text-gray-400">Let us know how we can best serve you.</p>
    </span>
    </div>

   <form class="space-y-6 my-6">
  <div class="grid grid-cols-2 gap-4">
    <div>
      <label for="name" class="block text-sm font-medium">Name</label>
      <input type="text" id="name" name="name" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
    </div>
    <div>
      <label for="company" class="block text-sm font-medium">Company</label>
      <input type="text" id="company" name="company" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
    </div>
    <div>
      <label for="email" class="block text-sm font-medium">Email</label>
      <input type="email" id="email" name="email" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
    </div>
    <div>
      <label for="contact" class="block text-sm font-medium">Contact Number</label>
      <input type="tel" id="contact" name="contact" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
    </div>
  </div>

  <!-- Dropdown Menu -->
  <div>
    <label for="reason" class="block text-sm font-medium">Select a Reason</label>
    <select id="reason" name="reason" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500">
      <option value="" disabled selected>Select a reason</option>
      <option value="support">Customer Support</option>
      <option value="sales">Sales Inquiry</option>
      <option value="feedback">Feedback</option>
      <option value="other">Other</option>
    </select>
  </div>

  <!-- Message Text Area -->
  <div>
    <label for="message" class="block text-sm font-medium">Message</label>
    <textarea id="message" name="message" rows="5" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
  </div>

  <!-- Submit Button -->
  <div>
    <button type="submit" class="w-full bg-[#1D2C47] text-white py-2 px-4 rounded hover:bg-blue-700 transition">
      Submit
    </button>
  </div>
</form>
  </div>
</div>

</header>